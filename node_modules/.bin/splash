#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/iojs" ]; then
  "$basedir/iojs"  "$basedir/../splash/splash/index.js" "$@"
  ret=$?
else 
  iojs  "$basedir/../splash/splash/index.js" "$@"
  ret=$?
fi
exit $ret
